        <div class="containerrr">




            <form action="/users/add" method="POST">
                <h3 style="font-size: large;">New Screen</h3>
                <hr>
                <div class="form-group">
                    <label for="pairing_code">pairing_code</label>
                    <input type="text" class="form-control" style="width: 400px; border-radius: 10px;" id="pairing_code"
                        name="pairing_code">
                </div>
                <div class="form-group">
                    <label for="screenname">Screen Name</label>
                    <input type="text" class="form-control" style="width: 400px; border-radius: 10px;" id="screenname"
                        name="screenname">
                </div>
                <div class="form-group">
                    <label for="tag">Tag</label>
                    <input type="text" class="form-control" style="width: 400px; border-radius: 10px;" id="tag"
                        name="tag">
                </div>
                <div class="form-group">
                    <label for="locationn">Location</label>
                    <input type="text" id="location" name="location" class="form-control"
                        style="width: 400px; border-radius: 10px;">
                </div>
                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" class="form-control" style="width: 400px; border-radius: 10px;" id="city"
                        name="city" placeholder="City">
                </div>
                <div class="row g-3 needs-validation" novalidate>
                    <div class="col-md-4">
                        <label for="state" class="form-label">State</label>
                        <input type="text" class="form-control" id="state" name="state" style="border-radius: 5px;"
                            placeholder="state" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="col-md-4">
                        <label for="country" class="form-label" style="margin-left: 100px;">Country</label>
                        <input type="text" class="form-control" id="country" name="country"
                            style="border-radius: 5px; margin-left: 100px;" placeholder="Country" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="area" class="form-label">Area</label>
                        <input type="text" class="form-control" id="area" name="area" style="border-radius: 5px;"
                            placeholder="Area">
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                    <div class="boxxx">
                        <!-- Google Maps API iframe code here -->
                        <div id="map" class="col-md-8" style="height: 300px;"></div>

                    </div>
                </div>
                <br>
                <button type="submit" class="btn btn-primary" style="border-radius: 10px; width: 400px;">Pair
                    Screen</button>
            </form>




